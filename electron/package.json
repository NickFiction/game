{
  "name": "terra-love-game",
  "version": "1.0.0",
  "description": "Terra Love - A pixel side-scrolling action game - Happy Birthday My Love!",
  "main": "main.js",
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "build-all": "electron-builder --win --mac --linux"
  },
  "build": {
    "appId": "com.terralove.game",
    "productName": "Terra Love",
    "directories": {
      "output": "../release"
    },
    "files": [
      "main.js",
      "../dist/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        },
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "../dist/icon-512.png"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "../dist/icon-512.png"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "../dist/icon-512.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
